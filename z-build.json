{
	"buildVersionFile": "./build-version",
	"googlefonts": {
		"src": [
			"./@src/css/google-fonts.json"
		],
		"dest": "./public/fonts/",
		"path": "/fonts/"
	},
	"copy": [
		{
			"src": "./node_modules/@fortawesome/fontawesome-pro/webfonts/",
			"pattern": "*",
			"dest": "../public/fonts/fontawesome/"
		},
		{
			"src": "./@src/assets/",
			"pattern": "**",
			"dest": "./public/",
			"watch": true
		},
		{
			"src": "./@src/",
			"pattern": "index.html",
			"dest": "./public/",
			"watch": true
		}
	],
	"css": [
		{
			"src": "./@src/css/",
			"dest": "./public/css/"
		}
	],
	"js": [
		{
			"src": "./@src/js/",
			"dest": "./public/js/"
		}
	]
}